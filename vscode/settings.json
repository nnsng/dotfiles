{
  "code-runner.clearPreviousOutput": true,
  "code-runner.runInTerminal": true,
  "css.format.spaceAroundSelectorSeparator": true,
  "custom-ui-style.font.sansSerif": "Lilex Nerd Font, Lilex",
  "custom-ui-style.stylesheet": {
    "*": "font-feature-settings: 'calt' 1, 'zero' 1;",
    ".monaco-workbench .pane-composite-part > .header-or-footer .composite-bar-container": "flex: none; margin: 0 auto"
  },
  "diffEditor.experimental.showMoves": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.codeActionsOnSave": {
    "source.sortImports": "always"
  },
  "editor.cursorBlinking": "expand",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.detectIndentation": false,
  // "editor.fontFamily": "Fira Code, FiraCode Nerd Font, Fira Sans",
  // "editor.fontLigatures": true,
  "editor.fontFamily": "Lilex Nerd Font, Lilex",
  "editor.fontLigatures": "'calt', 'zero'",
  "editor.fontSize": 12,
  "editor.formatOnSave": true,
  "editor.guides.bracketPairs": "active",
  "editor.inlayHints.enabled": "offUnlessPressed",
  "editor.letterSpacing": 0.2,
  "editor.lineHeight": 1.8,
  "editor.lineNumbers": "on",
  "editor.linkedEditing": true,
  "editor.links": false,
  "editor.minimap.enabled": false,
  "editor.occurrencesHighlight": "off",
  "editor.overviewRulerBorder": false,
  "editor.scrollbar.horizontal": "hidden",
  "editor.smoothScrolling": true,
  "editor.suggest.preview": true,
  "editor.tabSize": 2,
  "explorer.compactFolders": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.decorations.badges": false,
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "git.autofetch": true,
  "git.blame.statusBarItem.enabled": false,
  "git.confirmSync": false,
  "git.decorations.enabled": false,
  "git.inputValidation": true,
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "scminput": false
  },
  "github.copilot.nextEditSuggestions.enabled": true,
  "javascript.inlayHints.parameterNames.enabled": "all",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "terminal.integrated.fontLigatures.enabled": true,
  "terminal.integrated.fontLigatures.featureSettings": "\"calt\" on, \"zero\" on",
  "terminal.integrated.smoothScrolling": true,
  "typescript.inlayHints.parameterNames.enabled": "all",
  "typescript.preferences.preferTypeOnlyAutoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "window.commandCenter": false,
  "window.newWindowProfile": "Default",
  "window.title": "${activeEditorShort}${separator}${rootName}",
  "workbench.activityBar.location": "top",
  "workbench.colorTheme": "Dracula Flat",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.layoutControl.enabled": false,
  "workbench.list.smoothScrolling": true,
  "workbench.settings.editor": "json",
  "workbench.startupEditor": "none",
  "workbench.statusBar.visible": true,
  "workbench.tips.enabled": false,

  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-containers"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
